@model IEnumerable<SalesWebMvc.Models.Departament>

@{
    ViewData["Title"] = "Departamentos";
}

<h2>Departamentos</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo Departamento</a>
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>Ação</th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>

            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" title="Editar"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash" title="Excluir"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
        </tr>
        }
    </tbody>
</table>
