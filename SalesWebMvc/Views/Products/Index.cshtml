@model IEnumerable<SalesWebMvc.Models.Product>
@{
    ViewData["Title"] = "Produtos";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-default">Novo Produto</a>
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr class="success">
            <th>
                Ação
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodeProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Reference)/
                @Html.DisplayNameFor(model => model.Brand)/
                @Html.DisplayNameFor(model => model.Measure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IpiTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IcmsTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalePriceMin)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square" title="Editar"></i></a> |
                <a asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye" title="Detalhes"></i></a> |
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash" title="Excluir"></i></a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodeProduct)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Reference)/
                @Html.DisplayFor(modelItem => item.Brand)/
                @Html.DisplayFor(modelItem => item.Measure)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.IpiTax)
            </td>
            <td align="center">
                @Html.DisplayFor(modelItem => item.IcmsTax)
            </td>
            <td align="right">
                @Html.DisplayFor(modelItem => item.SalePriceMin)
            </td>

        </tr>
        }
    </tbody>

</table>  